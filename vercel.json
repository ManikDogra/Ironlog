{
  "builds": [
    {
      "src": "amplify/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/profile/(.*)",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/workouts/(.*)",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/weight/(.*)",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/health",
      "dest": "amplify/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",
    "PORT": "3000",
    "NODE_ENV": "production",
    "COGNITO_REGION": "ap-south-1",
    "COGNITO_USER_POOL_ID": "ap-south-1_LKeBeMENH",
    "COGNITO_CLIENT_ID": "7j50580qnn5upjatjr96ufgn9u"
  }
}
